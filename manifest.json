{
  "manifest_version": 3,
  "name": "Chrome Extension Template",
  "version": "1.0.0",
  "description": "A minimal Chrome extension template (MV3) with popup, options, content script, and background service worker.",
  "action": {
    "default_popup": "popup.html",
    "default_title": "Extension Template"
  },
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html",
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
